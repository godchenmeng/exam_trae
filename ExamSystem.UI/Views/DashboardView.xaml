<UserControl x:Class="ExamSystem.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 欢迎信息 -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="20">
                <StackPanel>
                    <TextBlock Text="{Binding WelcomeMessage}" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="欢迎使用在线考试系统" 
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- 统计卡片 -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 用户总数 -->
                <materialDesign:Card Grid.Column="0" 
                                   Margin="0,0,10,0"
                                   Padding="20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="用户总数"
                                          Style="{StaticResource CaptionTextStyle}"
                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="1,234"
                                          Style="{StaticResource TitleTextStyle}"
                                          Foreground="{StaticResource PrimaryBrush}"
                                          Margin="0,4,0,0"/>
                            </StackPanel>

                            <materialDesign:PackIcon Grid.Column="1"
                                                   Kind="AccountGroup"
                                                   Width="32" Height="32"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   Opacity="0.7"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 题目总数 -->
                <materialDesign:Card Grid.Column="1" 
                                   Margin="5,0,5,0"
                                   Padding="20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="题目总数"
                                          Style="{StaticResource CaptionTextStyle}"
                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="5,678"
                                          Style="{StaticResource TitleTextStyle}"
                                          Foreground="{StaticResource AccentBrush}"
                                          Margin="0,4,0,0"/>
                            </StackPanel>

                            <materialDesign:PackIcon Grid.Column="1"
                                                   Kind="BookOpenPageVariant"
                                                   Width="32" Height="32"
                                                   Foreground="{StaticResource AccentBrush}"
                                                   Opacity="0.7"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 试卷总数 -->
                <materialDesign:Card Grid.Column="2" 
                                   Margin="5,0,5,0"
                                   Padding="20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="试卷总数"
                                          Style="{StaticResource CaptionTextStyle}"
                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="234"
                                          Style="{StaticResource TitleTextStyle}"
                                          Foreground="{StaticResource SuccessBrush}"
                                          Margin="0,4,0,0"/>
                            </StackPanel>

                            <materialDesign:PackIcon Grid.Column="1"
                                                   Kind="FileDocument"
                                                   Width="32" Height="32"
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   Opacity="0.7"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 考试总数 -->
                <materialDesign:Card Grid.Column="3" 
                                   Margin="10,0,0,0"
                                   Padding="20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="考试总数"
                                          Style="{StaticResource CaptionTextStyle}"
                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="89"
                                          Style="{StaticResource TitleTextStyle}"
                                          Foreground="{StaticResource WarningBrush}"
                                          Margin="0,4,0,0"/>
                            </StackPanel>

                            <materialDesign:PackIcon Grid.Column="1"
                                                   Kind="ClipboardCheck"
                                                   Width="32" Height="32"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   Opacity="0.7"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- 快速操作 -->
            <materialDesign:Card Grid.Row="2" 
                               Margin="0,0,0,20"
                               Padding="24">
                <StackPanel>
                    <TextBlock Text="快速操作"
                              Style="{StaticResource SubtitleTextStyle}"
                              Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 用户管理 -->
                        <Button Grid.Column="0"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="80"
                               Margin="0,0,10,0">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="AccountGroup" 
                                                       Width="24" Height="24"
                                                       Margin="0,0,0,8"/>
                                <TextBlock Text="用户管理"/>
                            </StackPanel>
                        </Button>

                        <!-- 题库管理 -->
                        <Button Grid.Column="1"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="80"
                               Margin="5,0,5,0">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="BookOpenPageVariant" 
                                                       Width="24" Height="24"
                                                       Margin="0,0,0,8"/>
                                <TextBlock Text="题库管理"/>
                            </StackPanel>
                        </Button>

                        <!-- 试卷管理 -->
                        <Button Grid.Column="2"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="80"
                               Margin="5,0,5,0">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="FileDocument" 
                                                       Width="24" Height="24"
                                                       Margin="0,0,0,8"/>
                                <TextBlock Text="试卷管理"/>
                            </StackPanel>
                        </Button>

                        <!-- 考试管理 -->
                        <Button Grid.Column="3"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="80"
                               Margin="10,0,0,0">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="ClipboardCheck" 
                                                       Width="24" Height="24"
                                                       Margin="0,0,0,8"/>
                                <TextBlock Text="考试管理"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- 最近活动 -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 最近考试 -->
                <materialDesign:Card Grid.Column="0" 
                                   Margin="0,0,10,0"
                                   Padding="24">
                    <StackPanel>
                        <TextBlock Text="最近考试"
                                  Style="{StaticResource SubtitleTextStyle}"
                                  Margin="0,0,0,16"/>

                        <ListView>
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="数学期中考试"
                                                  Style="{StaticResource BodyTextStyle}"/>
                                        <TextBlock Text="2024-01-15 09:00"
                                                  Style="{StaticResource CaptionTextStyle}"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                           Background="{StaticResource SuccessBrush}"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           Margin="8,0">
                                        <TextBlock Text="已完成"
                                                  Foreground="White"
                                                  FontSize="12"/>
                                    </Border>

                                    <TextBlock Grid.Column="2"
                                              Text="85分"
                                              Style="{StaticResource BodyTextStyle}"
                                              FontWeight="Bold"/>
                                </Grid>
                            </ListViewItem>

                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="英语听力测试"
                                                  Style="{StaticResource BodyTextStyle}"/>
                                        <TextBlock Text="2024-01-20 14:00"
                                                  Style="{StaticResource CaptionTextStyle}"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                           Background="{StaticResource WarningBrush}"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           Margin="8,0">
                                        <TextBlock Text="进行中"
                                                  Foreground="White"
                                                  FontSize="12"/>
                                    </Border>

                                    <TextBlock Grid.Column="2"
                                              Text="--"
                                              Style="{StaticResource BodyTextStyle}"
                                              FontWeight="Bold"/>
                                </Grid>
                            </ListViewItem>

                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="物理实验报告"
                                                  Style="{StaticResource BodyTextStyle}"/>
                                        <TextBlock Text="2024-01-25 10:00"
                                                  Style="{StaticResource CaptionTextStyle}"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                           Background="{StaticResource AccentBrush}"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           Margin="8,0">
                                        <TextBlock Text="待开始"
                                                  Foreground="White"
                                                  FontSize="12"/>
                                    </Border>

                                    <TextBlock Grid.Column="2"
                                              Text="--"
                                              Style="{StaticResource BodyTextStyle}"
                                              FontWeight="Bold"/>
                                </Grid>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 系统通知 -->
                <materialDesign:Card Grid.Column="1" 
                                   Margin="10,0,0,0"
                                   Padding="24">
                    <StackPanel>
                        <TextBlock Text="系统通知"
                                  Style="{StaticResource SubtitleTextStyle}"
                                  Margin="0,0,0,16"/>

                        <StackPanel>
                            <Border Background="{StaticResource AccentBrush}"
                                   CornerRadius="8"
                                   Padding="12"
                                   Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="系统维护通知"
                                              Foreground="White"
                                              FontWeight="Bold"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="系统将于本周六进行维护升级，请提前安排考试时间。"
                                              Foreground="White"
                                              TextWrapping="Wrap"
                                              FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource SuccessBrush}"
                                   CornerRadius="8"
                                   Padding="12"
                                   Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="新功能上线"
                                              Foreground="White"
                                              FontWeight="Bold"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="新增了批量导入题目功能，支持Excel格式文件导入。"
                                              Foreground="White"
                                              TextWrapping="Wrap"
                                              FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource WarningBrush}"
                                   CornerRadius="8"
                                   Padding="12">
                                <StackPanel>
                                    <TextBlock Text="考试提醒"
                                              Foreground="White"
                                              FontWeight="Bold"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="您有3场考试即将开始，请及时参加。"
                                              Foreground="White"
                                              TextWrapping="Wrap"
                                              FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>