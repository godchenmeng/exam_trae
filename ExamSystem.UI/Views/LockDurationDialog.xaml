<Window x:Class="ExamSystem.UI.Views.LockDurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="锁定用户" 
        Height="280" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="选择锁定时长" 
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- 选择区域 -->
        <StackPanel Grid.Row="1" Spacing="12">
            <RadioButton x:Name="Lock1Hour" 
                        Content="1小时" 
                        GroupName="LockDuration"
                        IsChecked="True"
                        Style="{StaticResource MaterialDesignRadioButton}"/>
            
            <RadioButton x:Name="Lock6Hours" 
                        Content="6小时" 
                        GroupName="LockDuration"
                        Style="{StaticResource MaterialDesignRadioButton}"/>
            
            <RadioButton x:Name="Lock24Hours" 
                        Content="24小时" 
                        GroupName="LockDuration"
                        Style="{StaticResource MaterialDesignRadioButton}"/>
            
            <RadioButton x:Name="Lock7Days" 
                        Content="7天" 
                        GroupName="LockDuration"
                        Style="{StaticResource MaterialDesignRadioButton}"/>
            
            <RadioButton x:Name="LockCustom" 
                        Content="自定义" 
                        GroupName="LockDuration"
                        Style="{StaticResource MaterialDesignRadioButton}"/>
            
            <StackPanel Orientation="Horizontal" 
                       Margin="20,8,0,0"
                       IsEnabled="{Binding IsChecked, ElementName=LockCustom}">
                <TextBox x:Name="CustomHoursTextBox"
                        Width="80"
                        materialDesign:HintAssist.Hint="小时数"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="1"/>
                <TextBlock Text="小时" 
                          VerticalAlignment="Center" 
                          Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="取消" 
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Margin="0,0,8,0"
                   Padding="16,8"
                   Click="CancelButton_Click"/>
            <Button Content="确定" 
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Padding="16,8"
                   Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>