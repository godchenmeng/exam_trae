<Window x:Class="ExamSystem.WPF.Dialogs.UpdatePromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="发现新版本" Height="240" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Icon="pack://siteoforigin:,,,/logo.png">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="发现新版本" FontSize="18" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="最新版本："/>
                <TextBlock Text="{Binding LatestVersion}" FontWeight="Bold"/>
                <TextBlock Text="    当前版本：" Margin="12,0,0,0"/>
                <TextBlock Text="{Binding CurrentVersion}"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="立即更新" Width="100" Margin="0,0,8,0" Click="UpdateNow_Click"/>
            <Button Content="稍后提醒" Width="100" Margin="0,0,8,0" Click="RemindLater_Click"/>
            <Button Content="忽略此版本" Width="100" Click="Ignore_Click"/>
        </StackPanel>
    </Grid>
</Window>