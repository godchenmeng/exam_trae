<Window x:Class="ExamSystem.WPF.Dialogs.GradeAnswerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ExamSystem.WPF.Converters"
        Title="人工评分" Height="700" Width="1100" WindowStartupLocation="CenterOwner"
        Icon="pack://siteoforigin:,,,/logo.png">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2D6CDF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#1A73E8"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#ED6C02"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F7F9FC"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#6B7280"/>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SmallText">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
        </Style>
        <!-- 新增：统一按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A5BD7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEF3FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DCE8FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1669D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0E4FB1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsGraded}" Value="True">
                    <Setter Property="Background" Value="#F1F8E9"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsAnomaly}" Value="True">
                    <Setter Property="Background" Value="#FFFDE7"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部信息与过滤栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="试卷：" Style="{StaticResource SmallText}"/>
                <TextBlock Text="{Binding ExamPaperName}" FontWeight="Bold" Margin="8,0,0,0"/>
                <TextBlock Text="考生：" Style="{StaticResource SmallText}" Margin="16,0,0,0"/>
                <TextBlock Text="{Binding UserName}" FontWeight="Bold" Margin="8,0,0,0"/>
                <!-- 隐藏未评分数量显示 -->
                <!--<TextBlock Text="未评分：" Style="{StaticResource SmallText}" Margin="16,0,0,0"/>
                <Border Background="{StaticResource WarningBrush}" Padding="6,2" CornerRadius="4" Margin="8,0,0,0">
                    <TextBlock Text="{Binding UngradedCount}" Foreground="White"/>
                </Border>-->
                <CheckBox Content="仅显示未评分" IsChecked="{Binding ShowOnlyUngraded}" Margin="16,0,0,0"/>
                <!-- 隐藏实时保存功能 -->
                <!--<CheckBox Content="实时保存" IsChecked="{Binding IsAutoSave}" Margin="8,0,0,0"/>
                <TextBlock Text="保存中…" Foreground="{StaticResource WarningBrush}"
                           Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="8,0,0,0"/>-->
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal"/>
        </Grid>

        <!-- 主体区：左侧列表 + 右侧详情评分 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧题目列表 -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding SubjectiveAnswersView}"
                      SelectedItem="{Binding SelectedSubjectiveAnswer, Mode=TwoWay}"
                      AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column"
                      Margin="0" IsReadOnly="True">
                <DataGrid.Resources>
                    <converters:TrueFalseToChineseTextConverter x:Key="TrueFalseToChineseTextConverter"/>
                    <converters:QuestionTypeConverter x:Key="QuestionTypeConverter"/>
                    <!-- 新增：分数颜色与文本转换器 -->
                    <converters:ScorePercentageBrushConverter x:Key="ScorePercentageBrushConverter"/>
                    <converters:ScoreFractionTextConverter x:Key="ScoreFractionTextConverter"/>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="编号" Binding="{Binding QuestionNumber}" Width="70"/>
                    <DataGridTextColumn Header="类型" Binding="{Binding QuestionType, Converter={StaticResource QuestionTypeConverter}}" Width="90"/>
                    <!-- 新增：得分列，显示 X/Y 并按百分比颜色编码 -->
                    <DataGridTemplateColumn Header="得分" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="6,2" CornerRadius="4">
                                    <Border.Background>
                                        <MultiBinding Converter="{StaticResource ScorePercentageBrushConverter}">
                                            <Binding Path="Score"/>
                                            <Binding Path="MaxScore"/>
                                        </MultiBinding>
                                    </Border.Background>
                                    <TextBlock Foreground="White" FontWeight="Bold">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource ScoreFractionTextConverter}">
                                                <Binding Path="Score"/>
                                                <Binding Path="MaxScore"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="状态" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <!-- 已评分状态 -->
                                    <Border x:Name="GradedStatus" Background="{StaticResource SuccessBrush}" Padding="6,2" CornerRadius="4" Visibility="Collapsed">
                                        <TextBlock Text="已评分" Foreground="White"/>
                                    </Border>
                                    <!-- 未评分状态（替换原来的“异常/未评分”文案） -->
                                    <Border x:Name="UngradedStatus" Background="{StaticResource WarningBrush}" Padding="6,2" CornerRadius="4" Visibility="Collapsed">
                                        <TextBlock Text="未评分" Foreground="White"/>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsGraded}" Value="True">
                                        <Setter TargetName="GradedStatus" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="UngradedStatus" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsGraded}" Value="False">
                                        <Setter TargetName="GradedStatus" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="UngradedStatus" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 右侧详情与评分 -->
            <ScrollViewer Grid.Column="1" Margin="12,0,0,0">
                <StackPanel>
                    <GroupBox Header="题目内容">
                        <Border Background="{StaticResource SurfaceBrush}" Padding="10" CornerRadius="6">
                            <TextBlock Text="{Binding SelectedSubjectiveAnswer.Content}" TextWrapping="Wrap" FontSize="14"/>
                        </Border>
                    </GroupBox>
                    <GroupBox Header="考生答案">
                        <Border Background="{StaticResource SurfaceBrush}" Padding="10" CornerRadius="6">
                            <TextBlock Text="{Binding SelectedSubjectiveAnswer.UserAnswer, Converter={StaticResource TrueFalseToChineseTextConverter}}" TextWrapping="Wrap" FontSize="14"/>
                        </Border>
                    </GroupBox>
                    <GroupBox Header="标准答案">
                        <Border Background="{StaticResource SurfaceBrush}" Padding="10" CornerRadius="6">
                            <TextBlock Text="{Binding SelectedSubjectiveAnswer.StandardAnswer, Converter={StaticResource TrueFalseToChineseTextConverter}}" TextWrapping="Wrap" FontSize="14"/>
                        </Border>
                    </GroupBox>

                    <GroupBox Header="评分">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                <TextBlock Text="满分："/>
                                <Border Background="#E3F2FD" Padding="8,2" CornerRadius="4" Margin="8,0,0,0">
                                    <TextBlock Text="{Binding SelectedSubjectiveAnswer.MaxScore}" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="得分：" Margin="16,0,0,0"/>
                                <TextBox Width="120" Text="{Binding SelectedSubjectiveAnswer.Score, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0"/>
                                <Button Content="满分" Margin="8,0,0,0" Command="{Binding SetFullScoreCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="88"/>
                                <Button Content="0分" Margin="6,0,0,0" Command="{Binding SetZeroScoreCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="88"/>
                                <Button Content="保存当前题" Margin="12,0,0,0" Command="{Binding SaveSelectedCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="120"/>
                                <TextBlock Text="保存中…" Foreground="{StaticResource WarningBrush}" Margin="12,0,0,0"
                                           Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                            <TextBlock Text="评语" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding SelectedSubjectiveAnswer.Comment, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" Height="120"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 底部操作栏 -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="True" Height="4" VerticalAlignment="Center" Width="200"
                             Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- 隐藏重新自动批改客观题按钮 -->
                <!--<Button Content="重新自动批改客观题" Width="170" Margin="0,0,8,0" Command="{Binding AutoGradeCommand}" Style="{StaticResource AccentButtonStyle}"/>-->
                <Button Content="保存全部" Width="110" Margin="0,0,8,0" Command="{Binding SaveAllCommand}" IsEnabled="{Binding CanSave}" Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="关闭" Width="88" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>