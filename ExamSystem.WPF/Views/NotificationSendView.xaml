<UserControl x:Class="ExamSystem.WPF.Views.NotificationSendView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:domain="clr-namespace:ExamSystem.Domain.Enums;assembly=ExamSystem.Domain"
             xmlns:behaviors="clr-namespace:ExamSystem.WPF.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="通知发送" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,12" />

        <!-- 左侧表单 -->
        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource CardBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,8,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="标题" Margin="0,0,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBox Text="{Binding Title}" MinHeight="36" Margin="0,0,0,8"/>
                <TextBlock Text="内容" Margin="0,8,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBox Text="{Binding Content}" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="140" Margin="0,0,0,8"/>
                <TextBlock Text="优先级" Margin="0,8,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                <ComboBox ItemsSource="{Binding Priorities}" SelectedItem="{Binding SelectedPriority}" MinHeight="36" Style="{StaticResource ModernComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource NotificationPriorityToTextConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- 右侧：指定用户选择 -->
        <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource CardBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="8,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="发送范围" Margin="0,0,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                <ComboBox ItemsSource="{Binding SendRanges}" SelectedItem="{Binding SelectedSendRange}" MinHeight="36" Margin="0,0,0,8" Style="{StaticResource ModernComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource NotificationScopeToTextConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="选择接收人" Margin="0,8,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                <ListBox ItemsSource="{Binding Users}" SelectionMode="Extended" Height="160"
                        behaviors:ListBoxSelectedItemsBehavior.BindableSelectedItems="{Binding SelectedUsers}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Style>
                        <Style TargetType="ListBox">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedScope}" Value="{x:Static domain:NotificationScope.SpecificUsers}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedScope}" Value="{x:Static domain:NotificationScope.AllStudents}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                                
                            </Style.Triggers>
                        </Style>
                    </ListBox.Style>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 发送按钮 -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="发送" Command="{Binding SendCommand}" Style="{StaticResource PrimaryButtonStyle}" MinWidth="120"/>
        </StackPanel>
    </Grid>
</UserControl>