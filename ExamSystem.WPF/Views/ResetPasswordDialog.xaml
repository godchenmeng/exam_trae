<Window x:Class="ExamSystem.WPF.Views.ResetPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="重置密码" Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="请输入新的密码" FontSize="16" FontWeight="Bold"/>

    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,12,0,0">
      <TextBlock Text="新密码"/>
      <PasswordBox x:Name="NewPasswordBox" MinWidth="240"/>
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,8,0,0">
      <TextBlock Text="确认新密码"/>
      <PasswordBox x:Name="ConfirmPasswordBox" MinWidth="240"/>
    </StackPanel>

    <TextBlock x:Name="ErrorText" Grid.Row="3" Foreground="Red" TextWrapping="Wrap"/>

    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="确定" Width="80" Margin="0,0,8,0" Click="OnConfirmClick"/>
      <Button Content="取消" Width="80" Click="OnCancelClick"/>
    </StackPanel>
  </Grid>
</Window>