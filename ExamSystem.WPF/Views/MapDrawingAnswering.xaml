<UserControl x:Class="ExamSystem.WPF.Views.MapDrawingAnswering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 题目信息栏 -->
        <Border Grid.Row="0" Background="#f8f9fa" Padding="12" BorderBrush="#dee2e6" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock x:Name="QuestionTitleText" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock x:Name="QuestionContentText" TextWrapping="Wrap" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="剩余时间: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TimeRemainingText" Foreground="#dc3545"/>
                    <TextBlock Text="  |  分值: " Margin="20,0,0,0" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ScoreText" Foreground="#28a745"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- WebView2 地图容器 -->
        <wv2:WebView2 x:Name="MapWebView" Grid.Row="1" Panel.ZIndex="-1"/>

        <!-- 操作按钮栏 -->
        <Border Grid.Row="2" Background="#f8f9fa" Padding="12" BorderBrush="#dee2e6" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ClearAnswerButton" Content="清空作答" Margin="0,0,8,0" Padding="12,6" 
                        Background="#6c757d" Foreground="White" BorderThickness="0" Click="ClearAnswerButton_Click"/>
                <Button x:Name="SubmitAnswerButton" Content="提交答案" Padding="12,6" 
                        Background="#007bff" Foreground="White" BorderThickness="0" Click="SubmitAnswerButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>