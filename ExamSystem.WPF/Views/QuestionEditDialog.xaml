<Window x:Class="ExamSystem.WPF.Views.QuestionEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExamSystem.WPF.Converters"
        Title="{Binding DialogTitle}" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 加载指示器 -->
        <ProgressBar Grid.Row="0" 
                     IsIndeterminate="True" 
                     Height="4" 
                     Margin="0,0,0,10"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 基本信息 -->
                <GroupBox Header="基本信息" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 题目类型 -->
                        <Label Grid.Row="0" Grid.Column="0" Content="题目类型*:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  ItemsSource="{Binding QuestionTypes}"
                                  SelectedItem="{Binding Question.QuestionType}"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <!-- 难度等级 -->
                        <Label Grid.Row="1" Grid.Column="0" Content="难度等级*:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  ItemsSource="{Binding Difficulties}"
                                  SelectedItem="{Binding Question.Difficulty}"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <!-- 分值 -->
                        <Label Grid.Row="2" Grid.Column="0" Content="分值*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding Question.Score, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <!-- 标签 -->
                        <Label Grid.Row="3" Grid.Column="0" Content="标签:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding Question.Tags, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="多个标签用逗号分隔"/>
                    </Grid>
                </GroupBox>
                
                <!-- 题目内容 -->
                <GroupBox Header="题目内容" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="题目内容*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Question.Content, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                </GroupBox>
                
                <!-- 选项设置（仅选择题显示） -->
                <GroupBox Header="选项设置" 
                          Margin="0,0,0,15"
                          Visibility="{Binding IsChoiceQuestion, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="添加选项" 
                                    Command="{Binding AddOptionCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                        
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Options}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,2" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <CheckBox Grid.Column="0" 
                                                      IsChecked="{Binding IsCorrect}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"
                                                      ToolTip="正确答案"/>
                                            
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource TextBoxStyle}"
                                                     Margin="0"/>
                                            
                                            <Button Grid.Column="2" 
                                                    Content="↑" 
                                                    Command="{Binding DataContext.MoveOptionUpCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Height="30"
                                                    Margin="5,0"
                                                    ToolTip="上移"/>
                                            
                                            <Button Grid.Column="3" 
                                                    Content="删除" 
                                                    Command="{Binding DataContext.RemoveOptionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Background="#FFE6E6"
                                                    Foreground="#CC0000"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </GroupBox>
                
                <!-- 答案设置 -->
                <GroupBox Header="答案设置" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="正确答案*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Question.Answer, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="{Binding AnswerTooltip}"/>
                    </Grid>
                </GroupBox>
                
                <!-- 题目解析 -->
                <GroupBox Header="题目解析" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="解析说明:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Question.Analysis, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                </GroupBox>
                
                <!-- 状态设置 -->
                <GroupBox Header="状态设置" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <CheckBox Content="启用此题目" 
                                  IsChecked="{Binding Question.IsActive}"
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 验证消息 -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ValidationMessage}" 
                   Foreground="Red" 
                   FontWeight="Bold"
                   Margin="0,5"
                   TextWrapping="Wrap"
                   Visibility="{Binding ValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="{Binding SaveButtonText}" 
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
            <Button Content="取消" 
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>