<Window x:Class="ExamSystem.WPF.Views.QuestionEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExamSystem.WPF.Views"
        xmlns:converters="clr-namespace:ExamSystem.WPF.Converters"
        Title="{Binding DialogTitle}" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 加载指示器 -->
        <ProgressBar Grid.Row="0" 
                     IsIndeterminate="True" 
                     Height="4" 
                     Margin="0,0,0,10"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 基本信息 -->
                <GroupBox Header="基本信息" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 题目类型 -->
                        <Label Grid.Row="0" Grid.Column="0" Content="题目类型*:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  ItemsSource="{Binding QuestionTypes}"
                                  SelectedValue="{Binding SelectedQuestionType, UpdateSourceTrigger=PropertyChanged}"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <!-- 难度等级 -->
                        <Label Grid.Row="1" Grid.Column="0" Content="难度等级*:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  ItemsSource="{Binding Difficulties}"
                                  SelectedValue="{Binding Question.Difficulty}"
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <!-- 分值 -->
                        <Label Grid.Row="2" Grid.Column="0" Content="分值*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding Question.Score, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <!-- 标签 -->
                        <Label Grid.Row="3" Grid.Column="0" Content="标签:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding Question.Tags, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="多个标签用逗号分隔"/>
                    </Grid>
                </GroupBox>
                
                <!-- 题目内容（非填空题显示） -->
                <GroupBox Header="题目内容" Margin="0,0,0,15"
                          Visibility="{Binding IsFillInBlank, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="题目内容*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Question.Content, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                </GroupBox>
                
                <!-- 选项设置（仅选择题显示） -->
                <GroupBox Header="选项设置" 
                          Margin="0,0,0,15"
                          Visibility="{Binding IsChoiceQuestion, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="添加选项" 
                                    Command="{Binding AddOptionCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                        
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Options}">
                            <ItemsControl.Resources>
                                <!-- 单选题模板：使用RadioButton -->
                                <DataTemplate x:Key="SingleChoiceOptionTemplate">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,2" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <RadioButton Grid.Column="0"
                                                         IsChecked="{Binding IsCorrect, Mode=TwoWay}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,10,0"
                                                         ToolTip="正确答案"
                                                         GroupName="{Binding DataContext.SingleChoiceGroupName, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                         Checked="RadioButton_Checked"
                                                         Unchecked="RadioButton_Unchecked"/>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding OptionLabel}"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"
                                                       Foreground="#007ACC"/>
                                            
                                            <TextBox Grid.Column="2" 
                                                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource TextBoxStyle}"
                                                     Margin="0"/>
                                            
                                            <Button Grid.Column="3" 
                                                    Content="↑" 
                                                    Command="{Binding DataContext.MoveOptionUpCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Height="30"
                                                    Margin="5,0"
                                                    ToolTip="上移"/>
                                            
                                            <Button Grid.Column="4" 
                                                    Content="删除" 
                                                    Command="{Binding DataContext.RemoveOptionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Background="#FFE6E6"
                                                    Foreground="#CC0000"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                                
                                <!-- 多选题模板：使用CheckBox -->
                                <DataTemplate x:Key="MultipleChoiceOptionTemplate">
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,2" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <CheckBox Grid.Column="0" 
                                                      IsChecked="{Binding IsCorrect, Mode=TwoWay}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,10,0"
                                                      ToolTip="正确答案"/>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding OptionLabel}"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"
                                                       Foreground="#007ACC"/>
                                            
                                            <TextBox Grid.Column="2" 
                                                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource TextBoxStyle}"
                                                     Margin="0"/>
                                            
                                            <Button Grid.Column="3" 
                                                    Content="↑" 
                                                    Command="{Binding DataContext.MoveOptionUpCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Height="30"
                                                    Margin="5,0"
                                                    ToolTip="上移"/>
                                            
                                            <Button Grid.Column="4" 
                                                    Content="删除" 
                                                    Command="{Binding DataContext.RemoveOptionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Background="#FFE6E6"
                                                    Foreground="#CC0000"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.Resources>
                            
                            <!-- 根据题型切换模板 -->
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="ContentTemplate" Value="{StaticResource MultipleChoiceOptionTemplate}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsSingleChoice, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                                            <Setter Property="ContentTemplate" Value="{StaticResource SingleChoiceOptionTemplate}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>
                    </Grid>
                </GroupBox>
                
                <!-- 判断题答案设置 -->
                <GroupBox Header="判断题答案" 
                          Margin="0,0,0,15"
                          Visibility="{Binding IsTrueFalse, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton Content="正确" 
                                         IsChecked="{Binding TrueFalseAnswer, Converter={StaticResource BooleanToTrueConverter}}"
                                         GroupName="TrueFalseAnswer"
                                         Margin="0,0,20,0"
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                            <RadioButton Content="错误" 
                                         IsChecked="{Binding TrueFalseAnswer, Converter={StaticResource BooleanToFalseConverter}}"
                                         GroupName="TrueFalseAnswer"
                                         Margin="0,0,0,0"
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                
                <!-- 填空题内容编辑 -->
                <GroupBox Header="填空题内容编辑" 
                          Margin="0,0,0,15"
                          Visibility="{Binding IsFillInBlank, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="插入空格 ______" 
                                    Command="{Binding InsertBlankCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    ToolTip="在题目内容中插入填空标记"/>
                            <TextBlock Text="提示：使用 ______ 标记填空位置" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       FontStyle="Italic"
                                       Foreground="Gray"/>
                        </StackPanel>
                        
                        <Label Grid.Row="1" Content="题目内容（含填空标记）*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" 
                                 Text="{Binding FillBlankContent, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="使用 ______ 标记填空位置"/>
                    </Grid>
                </GroupBox>

                <!-- 答案设置 -->
                <GroupBox Header="答案设置" 
                          Margin="0,0,0,15"
                          Visibility="{Binding ShowTraditionalAnswerInput, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="正确答案*:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Question.Answer, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="{Binding AnswerTooltip}"
                                 IsReadOnly="{Binding IsChoiceQuestion}"
                                 Background="{Binding IsChoiceQuestion, Converter={StaticResource BooleanToBackgroundConverter}}"/>
                        
                        <!-- 选择题答案提示 -->
                        <TextBlock Grid.Row="1" 
                                   Text="选择题答案将根据勾选的选项自动生成"
                                   Visibility="{Binding IsChoiceQuestion, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"/>
                    </Grid>
                </GroupBox>
                
                <!-- 题目解析 -->
                <GroupBox Header="题目解析" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="解析说明:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Question.Analysis, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource TextBoxStyle}"/>
                    </Grid>
                </GroupBox>
                
                <!-- 状态设置 -->
                <GroupBox Header="状态设置" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <CheckBox Content="启用此题目" 
                                  IsChecked="{Binding Question.IsActive}"
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 验证消息 -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding ValidationMessage}" 
                   Foreground="Red" 
                   FontWeight="Bold"
                   Margin="0,5"
                   TextWrapping="Wrap"
                   Visibility="{Binding ValidationMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="{Binding SaveButtonText}" 
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                    Visibility="{Binding IsMapDrawing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            <!--<Button Content="打开地图绘制编辑器"
                    Click="OpenMapDrawingEditorButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Visibility="{Binding IsMapDrawing, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->
            <Button Content="取消" 
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>