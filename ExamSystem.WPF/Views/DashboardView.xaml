<UserControl x:Class="ExamSystem.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ExamSystem.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 欢迎信息 -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="欢迎使用在线考试系统" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="WelcomeMessageTextBlock" 
                               Text="管理员，您好！" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>
            </Border>

            <!-- 统计卡片 -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 题库数量 -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="📚" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="QuestionBankCountTextBlock" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="题库数量" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 题目数量 -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="QuestionCountTextBlock" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource AccentBrush}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="题目数量" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 试卷数量 -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="📄" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ExamPaperCountTextBlock" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#52C41A" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="试卷数量" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 考试记录 -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ExamRecordCountTextBlock" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#FAAD14" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="考试记录" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 快速操作 -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="快速操作" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" 
                               Margin="0,0,0,15"/>
                    
                    <UniformGrid Columns="4" Rows="2">
                        <!-- 创建题库 -->
                        <Button x:Name="CreateQuestionBankButton" 
                                Style="{StaticResource PrimaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="CreateQuestionBankButton_Click">
                            <StackPanel>
                                <TextBlock Text="📚" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="创建题库" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 添加题目 -->
                        <Button x:Name="AddQuestionButton" 
                                Style="{StaticResource PrimaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="AddQuestionButton_Click">
                            <StackPanel>
                                <TextBlock Text="➕" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="添加题目" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 创建试卷 -->
                        <Button x:Name="CreateExamPaperButton" 
                                Style="{StaticResource PrimaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="CreateExamPaperButton_Click">
                            <StackPanel>
                                <TextBlock Text="📄" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="创建试卷" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 查看统计 -->
                        <Button x:Name="ViewStatisticsButton" 
                                Style="{StaticResource PrimaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="ViewStatisticsButton_Click">
                            <StackPanel>
                                <TextBlock Text="📊" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="查看统计" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 用户管理 -->
                        <Button x:Name="UserManagementButton" 
                                Style="{StaticResource SecondaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="UserManagementButton_Click">
                            <StackPanel>
                                <TextBlock Text="👤" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="用户管理" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 系统设置 -->
                        <Button x:Name="SystemSettingsButton" 
                                Style="{StaticResource SecondaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="SystemSettingsButton_Click">
                            <StackPanel>
                                <TextBlock Text="⚙️" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="系统设置" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 数据备份 -->
                        <Button x:Name="DataBackupButton" 
                                Style="{StaticResource SecondaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="DataBackupButton_Click">
                            <StackPanel>
                                <TextBlock Text="💾" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="数据备份" FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- 帮助文档 -->
                        <Button x:Name="HelpDocumentButton" 
                                Style="{StaticResource SecondaryButton}" 
                                Margin="5" 
                                Height="60"
                                Click="HelpDocumentButton_Click">
                            <StackPanel>
                                <TextBlock Text="❓" FontSize="20" Margin="0,0,0,5"/>
                                <TextBlock Text="帮助文档" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- 最近活动 -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="最近活动" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" 
                               Margin="0,0,0,15"/>
                    
                    <ListView x:Name="RecentActivitiesListView" 
                              BorderThickness="0" 
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Icon}" 
                                                   FontSize="16" 
                                                   Margin="0,0,10,0" 
                                                   VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="14" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Time}" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>