<UserControl x:Class="ExamSystem.WPF.Views.StudentExamResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- 考试结果卡片样式 -->
        <Style x:Key="ExamResultCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF3B30" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 分数标签样式 -->
        <Style x:Key="ScoreTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 优秀分数样式 -->
        <Style x:Key="ExcellentScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 良好分数样式 -->
        <Style x:Key="GoodScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#C8E6C9"/>
            <Setter Property="BorderBrush" Value="#66BB6A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 及格分数样式 -->
        <Style x:Key="PassScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 不及格分数样式 -->
        <Style x:Key="FailScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部筛选区域 -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题 + 操作 -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="考试结果" FontSize="24" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="刷新" Command="{Binding RefreshCommand}"
                                Style="{StaticResource ActionButtonStyle}" Height="32" Width="80"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToFalseConverter}}"/>
                        <StackPanel Orientation="Horizontal" Margin="12,0,0,0"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ProgressBar IsIndeterminate="True" Width="120" Height="4" VerticalAlignment="Center"/>
                            <TextBlock Text="正在刷新..." FontSize="12" Foreground="#666" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 考试结果列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <!-- 加载指示器 -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,10"/>
                    <TextBlock Text="正在加载考试结果..." FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 空状态 -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10" Opacity="0.5"/>
                    <TextBlock Text="暂无考试记录" FontSize="16" Foreground="#999" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="完成考试后，结果将在这里显示" FontSize="12" Foreground="#BBB" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 考试结果列表 -->
                <ItemsControl ItemsSource="{Binding ExamResults}"
                              Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ExamResultCardStyle}" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.ViewDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 考试信息 -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding ExamTitle}" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="试卷名称：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding ExamTitle}" FontSize="12" Foreground="#333"/>
                                            <TextBlock Text="  |  " FontSize="12" Foreground="#CCC" Margin="8,0"/>
                                            <TextBlock Text="考试时间：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding ExamDate, StringFormat=yyyy-MM-dd HH:mm}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="用时：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Duration}" FontSize="12" Foreground="#333"/>
                                            <TextBlock Text="  |  " FontSize="12" Foreground="#CCC" Margin="8,0"/>
                                            <TextBlock Text="题目数：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding QuestionCount}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="状态：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 分数显示 -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0">
                                        <Border x:Name="ScoreBorder" Style="{StaticResource GoodScoreStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="18" FontWeight="Bold" Foreground="#333">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:F1} / {1:F1} 分">
                                                            <Binding Path="Score"/>
                                                            <Binding Path="TotalScore"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                        <!-- 移除百分比显示，仅展示总分 -->
                                    </StackPanel>

                                    <!-- 操作按钮（根据需求移除查看详情与错题分析按钮） -->
                                </Grid>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding ScoreLevel}" Value="Excellent">
                                    <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource ExcellentScoreStyle}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ScoreLevel}" Value="Good">
                                    <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource GoodScoreStyle}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ScoreLevel}" Value="Pass">
                                    <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource PassScoreStyle}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ScoreLevel}" Value="Fail">
                                    <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource FailScoreStyle}"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>