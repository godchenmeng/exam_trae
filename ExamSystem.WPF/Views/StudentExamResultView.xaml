<UserControl x:Class="ExamSystem.WPF.Views.StudentExamResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- 考试结果卡片样式 -->
        <Style x:Key="ExamResultCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#2196F3" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 分数标签样式 -->
        <Style x:Key="ScoreTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 优秀分数样式 -->
        <Style x:Key="ExcellentScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 良好分数样式 -->
        <Style x:Key="GoodScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 及格分数样式 -->
        <Style x:Key="PassScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 不及格分数样式 -->
        <Style x:Key="FailScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部筛选区域 -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题 -->
                <TextBlock Grid.Row="0" Text="考试结果" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

                <!-- 筛选控件 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 搜索框 -->
                    <TextBlock Grid.Column="0" Text="搜索：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="SearchTextBox" 
                             Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                             Height="32" Padding="8" BorderBrush="#DDD" BorderThickness="1"/>

                    <!-- 科目筛选 -->
                    <TextBlock Grid.Column="3" Text="科目：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="4" x:Name="SubjectComboBox"
                              ItemsSource="{Binding Subjects}"
                              SelectedItem="{Binding SelectedSubject}"
                              Height="32" Padding="8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 时间范围筛选 -->
                    <TextBlock Grid.Column="6" Text="时间：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="7" x:Name="TimeRangeComboBox"
                              ItemsSource="{Binding TimeRanges}"
                              SelectedItem="{Binding SelectedTimeRange}"
                              Height="32" Padding="8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 刷新按钮 -->
                    <Button Grid.Column="9" Content="刷新" 
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            Height="32" Width="80"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 考试结果列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <!-- 加载指示器 -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,10"/>
                    <TextBlock Text="正在加载考试结果..." FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 空状态 -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10" Opacity="0.5"/>
                    <TextBlock Text="暂无考试记录" FontSize="16" Foreground="#999" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="完成考试后，结果将在这里显示" FontSize="12" Foreground="#BBB" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 考试结果列表 -->
                <ItemsControl ItemsSource="{Binding ExamResults}"
                              Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ExamResultCardStyle}" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.ViewDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 考试信息 -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding ExamTitle}" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="科目：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Subject}" FontSize="12" Foreground="#333"/>
                                            <TextBlock Text="  |  " FontSize="12" Foreground="#CCC" Margin="8,0"/>
                                            <TextBlock Text="考试时间：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding ExamDate, StringFormat=yyyy-MM-dd HH:mm}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="用时：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Duration}" FontSize="12" Foreground="#333"/>
                                            <TextBlock Text="  |  " FontSize="12" Foreground="#CCC" Margin="8,0"/>
                                            <TextBlock Text="题目数：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding QuestionCount}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="状态：" FontSize="12" Foreground="#666" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 分数显示 -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0">
                                        <Border x:Name="ScoreBorder" Style="{StaticResource GoodScoreStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Score}" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                                                <TextBlock Text="/" FontSize="14" Foreground="#666" Margin="2,0"/>
                                                <TextBlock Text="{Binding TotalScore}" FontSize="14" Foreground="#666"/>
                                            </StackPanel>
                                        </Border>
                                        <TextBlock Text="{Binding ScorePercentage, StringFormat={}{0:F1}%}" 
                                                   FontSize="12" Foreground="#666" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                                        <Button Content="查看详情" 
                                                Command="{Binding DataContext.ViewDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Margin="0,0,0,8"/>
                                        
                                        <Button Content="错题分析" 
                                                Command="{Binding DataContext.ViewWrongAnswersCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="#FF9800"
                                                Visibility="{Binding HasWrongAnswers, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 数据触发器设置分数样式 -->
                                <Border.Triggers>
                                    <DataTrigger Binding="{Binding ScoreLevel}" Value="Excellent">
                                        <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource ExcellentScoreStyle}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ScoreLevel}" Value="Good">
                                        <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource GoodScoreStyle}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ScoreLevel}" Value="Pass">
                                        <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource PassScoreStyle}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ScoreLevel}" Value="Fail">
                                        <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource FailScoreStyle}"/>
                                    </DataTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>