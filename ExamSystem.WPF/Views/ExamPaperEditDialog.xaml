<Window x:Class="ExamSystem.WPF.Views.ExamPaperEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamSystem.WPF.Converters"
        mc:Ignorable="d"
        Title="试卷编辑"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- 样式定义 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputStyle}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource InputStyle}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MultiLineTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputStyle}">
            <Setter Property="Height" Value="80"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5D6D7E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E74C3C"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- 转换器 -->
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="试卷信息编辑" Style="{StaticResource HeaderTextStyle}"/>

        <!-- 表单内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 基本信息 -->
                <GroupBox Header="基本信息" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 试卷名称 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="试卷名称*" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                            <TextBox Text="{Binding ExamPaper.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            <TextBlock Text="{Binding ValidationMessages.Name}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ValidationMessages.Name, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 试卷描述 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="试卷描述" Style="{StaticResource LabelStyle}" VerticalAlignment="Top" Margin="0,8,10,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                            <TextBox Text="{Binding ExamPaper.Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource MultiLineTextBoxStyle}"/>
                            <TextBlock Text="{Binding ValidationMessages.Description}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ValidationMessages.Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 考试时长 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="考试时长(分钟)*" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,15">
                            <TextBox Text="{Binding ExamPaper.Duration, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            <TextBlock Text="{Binding ValidationMessages.Duration}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ValidationMessages.Duration, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 及格分数 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="及格分数*" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,15">
                            <TextBox Text="{Binding ExamPaper.PassScore, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxStyle}"/>
                            <TextBlock Text="{Binding ValidationMessages.PassScore}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ValidationMessages.PassScore, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 考试设置 -->
                <GroupBox Header="考试设置" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 允许重考 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="允许重考" Style="{StaticResource LabelStyle}"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" 
                                  IsChecked="{Binding ExamPaper.AllowRetake}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- 显示答案 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="考试后显示答案" Style="{StaticResource LabelStyle}"/>
                        <CheckBox Grid.Row="1" Grid.Column="1" 
                                  IsChecked="{Binding ExamPaper.ShowAnswerAfterSubmit}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- 随机题目顺序 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="随机题目顺序" Style="{StaticResource LabelStyle}"/>
                        <CheckBox Grid.Row="2" Grid.Column="1" 
                                  IsChecked="{Binding ExamPaper.RandomQuestionOrder}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- 随机选项顺序 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="随机选项顺序" Style="{StaticResource LabelStyle}"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" 
                                  IsChecked="{Binding ExamPaper.RandomOptionOrder}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,15"/>
                    </Grid>
                </GroupBox>

                <!-- 时间设置 -->
                <GroupBox Header="时间设置" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 开始时间 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="开始时间" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                            <DatePicker SelectedDate="{Binding ExamPaper.StartTime}" 
                                        Height="35"
                                        FontSize="14"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"/>
                            <TextBlock Text="{Binding ValidationMessages.StartTime}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ValidationMessages.StartTime, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 结束时间 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="结束时间" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                            <DatePicker SelectedDate="{Binding ExamPaper.EndTime}" 
                                        Height="35"
                                        FontSize="14"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"/>
                            <TextBlock Text="{Binding ValidationMessages.EndTime}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ValidationMessages.EndTime, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="保存" 
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
            <Button Content="取消" 
                    Click="CancelButton_Click"
                    Style="{StaticResource CancelButtonStyle}"/>
        </StackPanel>

        <!-- 加载遮罩 -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,10"/>
                <TextBlock Text="正在保存..." FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>