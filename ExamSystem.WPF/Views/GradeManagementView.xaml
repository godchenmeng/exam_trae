<UserControl x:Class="ExamSystem.WPF.Views.GradeManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
            <TextBlock Text="试卷：" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="200" Margin="0,0,16,0"
                      ItemsSource="{Binding PaperOptions}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedPaperId}"/>

            <TextBlock Text="状态：" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="140" Margin="0,0,16,0"
                      ItemsSource="{Binding StatusOptions}"
                      DisplayMemberPath="Display"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding SelectedStatus}"/>

            <TextBlock Text="姓名关键词：" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="220" Margin="0,0,16,0" Text="{Binding NameKeyword, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="刷新" Width="90" Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <!-- 答卷列表 -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Records}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="试卷名称" Binding="{Binding PaperName}" Width="*"/>
                <DataGridTextColumn Header="答题人" Binding="{Binding UserName}" Width="160"/>
                <DataGridTextColumn Header="答题时间" Width="180">
                    <DataGridTextColumn.Binding>
                        <Binding Path="EndTime" StringFormat="yyyy-MM-dd HH:mm" TargetNullValue=""/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="分数" Binding="{Binding Score}" Width="100"/>
                <DataGridTextColumn Header="状态" Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="StatusDisplay"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="操作" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="查看" Margin="0,0,8,0"
                                        Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="评分"
                                        Command="{Binding DataContext.GradeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        IsEnabled="{Binding HasUngraded}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>