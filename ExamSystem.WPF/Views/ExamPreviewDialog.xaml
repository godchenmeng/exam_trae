<Window x:Class="ExamSystem.WPF.Views.ExamPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:enums="clr-namespace:ExamSystem.Domain.Enums;assembly=ExamSystem.Domain"
        mc:Ignorable="d"
        Title="试卷预览" Height="750" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <!-- 对话框标题样式 -->
        <Style x:Key="DialogTitleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextStyle}">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <!-- 信息卡片样式 -->
        <Style x:Key="InfoCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
        
        <!-- 题目卡片样式 -->
        <Style x:Key="QuestionCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        
        <!-- 选项文本样式 -->
        <Style x:Key="OptionTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- 底部按钮区域样式 -->
        <Style x:Key="ButtonPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Padding" Value="24,16"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" 
                      Padding="24" Background="{StaticResource BackgroundBrush}">
            <StackPanel>
                <!-- 试卷标题 -->
                <TextBlock Text="{Binding ExamPaper.Name}" Style="{StaticResource DialogTitleTextStyle}"/>
                
                <!-- 试卷基本信息卡片 -->
                <Border Style="{StaticResource InfoCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 第一行：考试时长和总分 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="考试时长：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding ExamPaper.Duration}" Style="{StaticResource ValueTextStyle}"/>
                            <TextBlock Text="分钟" Style="{StaticResource ValueTextStyle}" Margin="2,0,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="总分：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding ExamPaper.TotalScore}" Style="{StaticResource ValueTextStyle}"/>
                            <TextBlock Text="分" Style="{StaticResource ValueTextStyle}" Margin="2,0,0,0"/>
                        </StackPanel>
                        
                        <!-- 第二行：及格分数和题目数量 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="及格分数：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding ExamPaper.PassScore}" Style="{StaticResource ValueTextStyle}"/>
                            <TextBlock Text="分" Style="{StaticResource ValueTextStyle}" Margin="2,0,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="题目数量：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding QuestionCount}" Style="{StaticResource ValueTextStyle}"/>
                            <TextBlock Text="题" Style="{StaticResource ValueTextStyle}" Margin="2,0,0,0"/>
                        </StackPanel>
                        
                        <!-- 第三行：随机题目和允许重考 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="随机题目：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding RandomQuestionText}" Style="{StaticResource ValueTextStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="允许重考：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding AllowRetakeText}" Style="{StaticResource ValueTextStyle}"/>
                        </StackPanel>
                        
                        <!-- 第四行：考试时间 -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="开始时间：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding StartTimeText}" Style="{StaticResource ValueTextStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="结束时间：" Style="{StaticResource InfoTextStyle}"/>
                            <TextBlock Text="{Binding EndTimeText}" Style="{StaticResource ValueTextStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 考试须知 -->
                <Border Style="{StaticResource InfoCardStyle}" 
                        Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="考试须知" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding Description}" Style="{StaticResource BodyTextStyle}" 
                                   TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </Border>
                
                <!-- 题目预览 -->
                <TextBlock Text="题目预览" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>
                
                <ItemsControl ItemsSource="{Binding PaperQuestions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource QuestionCardStyle}">
                                <StackPanel>
                                    <!-- 题目标题 -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="第" Style="{StaticResource QuestionTextStyle}"/>
                                            <TextBlock Text="{Binding OrderIndex}" Style="{StaticResource QuestionTextStyle}"/>
                                            <TextBlock Text="题" Style="{StaticResource QuestionTextStyle}"/>
                                            <TextBlock Text="（" Style="{StaticResource QuestionTextStyle}" Margin="8,0,0,0"/>
                                            <TextBlock Text="{Binding Question.Type, Converter={StaticResource QuestionTypeConverter}}" 
                                                       Style="{StaticResource QuestionTextStyle}"/>
                                            <TextBlock Text="）" Style="{StaticResource QuestionTextStyle}"/>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="1" Background="{StaticResource PrimaryLightBrush}" 
                                                CornerRadius="12" Padding="8,4">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Score}" Style="{StaticResource ValueTextStyle}" 
                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                                <TextBlock Text="分" Style="{StaticResource ValueTextStyle}" 
                                                           Foreground="{StaticResource PrimaryBrush}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- 题目内容 -->
                                    <TextBlock Text="{Binding Question.Content}" Style="{StaticResource QuestionTextStyle}" 
                                               Margin="0,0,0,16"/>
                                    
                                    <!-- 选项 -->
                                    <ItemsControl ItemsSource="{Binding Question.Options}">
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Question.Type}" Value="{x:Static enums:QuestionType.SingleChoice}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Question.Type}" Value="{x:Static enums:QuestionType.MultipleChoice}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Question.Type}" Value="{x:Static enums:QuestionType.TrueFalse}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Question.Type}" Value="{x:Static enums:QuestionType.Essay}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8F9FA" 
                                                        CornerRadius="6" Margin="8,4" Padding="8,4">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Label}" Style="{StaticResource ValueTextStyle}" 
                                                                   Margin="0,0,8,0" MinWidth="20"/>
                                                        <TextBlock Text="{Binding Content}" Style="{StaticResource BodyTextStyle}" 
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部按钮栏 -->
        <Border Grid.Row="1" Style="{StaticResource ButtonPanelStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="取消" Style="{StaticResource SecondaryButtonStyle}" 
                        Command="{Binding CancelCommand}" Margin="0,0,12,0"/>
                <Button Content="开始考试" Style="{StaticResource SuccessButtonStyle}" 
                        Command="{Binding StartExamCommand}"/>
            </StackPanel>
        </Border>
        
        <!-- 加载指示器 -->
        <Grid Grid.RowSpan="2" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" 
                    Padding="32,24" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"
                                 Style="{StaticResource ModernProgressBar}"/>
                    <TextBlock Text="加载中..." Style="{StaticResource BodyTextStyle}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>