<UserControl x:Class="ExamSystem.WPF.Views.ExamPaperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.WPF.Views"
             xmlns:converters="clr-namespace:ExamSystem.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- 统一使用全局样式与转换器（CommonStyles.xaml / App.xaml） -->
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="试卷管理" Style="{StaticResource TitleText}"/>

        <!-- 工具栏 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 搜索和筛选 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox x:Name="SearchTextBox" 
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         Width="300" 
                         Height="35"
                         VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="搜索试卷名称或描述..." 
                                                             Foreground="#95A5A6" 
                                                             FontSize="14" 
                                                             Margin="5,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ComboBox x:Name="StatusFilterComboBox"
                          SelectedItem="{Binding StatusFilter}"
                          ItemsSource="{Binding StatusOptions}"
                          Style="{StaticResource ModernComboBox}"
                          Width="140"
                          Height="35"
                          Margin="10,0,0,0"
                          VerticalContentAlignment="Center"/>

                <Button Content="刷新" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="10,0,0,0"/>
            </StackPanel>

            <!-- 操作按钮 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="新建试卷" 
                        Command="{Binding CreateExamPaperCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="编辑试卷" 
                        Command="{Binding EditExamPaperCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="复制试卷" 
                        Command="{Binding CopyExamPaperCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="删除试卷" 
                        Command="{Binding DeleteExamPaperCommand}"
                        Style="{StaticResource DangerButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 试卷列表 -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列表标题 -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15,10" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
                        <TextBlock Text="试卷列表" Style="{StaticResource SubtitleText}" Margin="0"/>
                    </Border>

                    <!-- 试卷列表 -->
                    <DataGrid Grid.Row="1"
                              Style="{StaticResource ModernDataGrid}"
                              ItemsSource="{Binding ExamPapersView}"
                              SelectedItem="{Binding SelectedExamPaper}"
                              SelectionMode="Single"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="40"
                              FontSize="13">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="试卷名称" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="草稿">
                                                <Setter Property="Foreground" Value="#95A5A6"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="已发布">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="已结束">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="总分" Binding="{Binding TotalScore, StringFormat=F1}" Width="60"/>
                            <DataGridTextColumn Header="时长(分钟)" Binding="{Binding Duration}" Width="80"/>
                            <DataGridTextColumn Header="题目数" Binding="{Binding PaperQuestions.Count}" Width="60"/>
                            <DataGridTextColumn Header="创建者" Binding="{Binding Creator.RealName, TargetNullValue=-}" Width="100"/>
                            <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 加载指示器 -->
                    <Grid Grid.Row="1" 
                          Background="White" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,10"/>
                            <TextBlock Text="正在加载..." FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- 分隔线 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Background="#E5E5E5"/>

            <!-- 试卷详情和操作 -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 详情标题 -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15,10" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
                        <TextBlock Text="试卷详情" Style="{StaticResource SubtitleText}" Margin="0"/>
                    </Border>

                    <!-- 试卷详情 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <Grid>
                            <StackPanel Visibility="{Binding IsExamPaperSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <!-- 基本信息 -->
                            <TextBlock Text="基本信息" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="试卷名称：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedExamPaper.Name}" Margin="10,5,0,5" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="描述：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedExamPaper.Description}" Margin="10,5,0,5" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="状态：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedExamPaper.Status}" Margin="10,5,0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="总分：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedExamPaper.TotalScore, StringFormat=F1}" Margin="10,5,0,5"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="考试时长：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedExamPaper.Duration, StringFormat={}{0} 分钟}" Margin="10,5,0,5"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="及格分数：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedExamPaper.PassScore, StringFormat=F1}" Margin="10,5,0,5"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="题目数量：" FontWeight="SemiBold" Margin="0,5"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding PaperQuestions.Count}" Margin="10,5,0,5"/>
                            </Grid>

                            <!-- 题目列表 -->
                            <TextBlock Text="题目列表" FontWeight="SemiBold" FontSize="14" Margin="0,10,0,10"/>
                            
                            <ListBox ItemsSource="{Binding PaperQuestions}" 
                                     MaxHeight="300"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#E5E5E5"
                                     BorderThickness="1">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding OrderIndex, StringFormat={}第{0}题}" 
                                                       FontWeight="SemiBold" 
                                                       VerticalAlignment="Top"
                                                       Margin="0,0,10,0"/>

                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Question.Content}" 
                                                       TextWrapping="Wrap"
                                                       VerticalAlignment="Top"/>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding Score, StringFormat={}{0}分}" 
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Top"
                                                       Margin="10,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            </StackPanel>

                            <!-- 未选择提示 -->
                            <TextBlock Text="请选择一个试卷查看详情" 
                                       FontSize="14" 
                                       Foreground="#95A5A6" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsExamPaperSelected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                        </Grid>
                    </ScrollViewer>

                    <!-- 操作按钮 -->
                    <Border Grid.Row="2" BorderBrush="#E5E5E5" BorderThickness="0,1,0,0" Padding="15">
                        <StackPanel Visibility="{Binding IsExamPaperSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button Content="管理题目" 
                                    Command="{Binding ManageQuestionsCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,5"/>
                            
                            <Button Content="预览试卷" 
                                    Command="{Binding PreviewExamPaperCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,5"/>
                            
                            <Button Content="发布试卷" 
                                    Command="{Binding PublishExamPaperCommand}"
                                    Style="{StaticResource SuccessButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,5"
                                    Visibility="{Binding CanPublishExamPaper, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <Button Content="取消发布" 
                                    Command="{Binding UnpublishExamPaperCommand}"
                                    Style="{StaticResource WarningButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,5"
                                    Visibility="{Binding CanUnpublishExamPaper, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>