<UserControl x:Class="ExamSystem.WPF.Views.ExamResultDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- 题目卡片样式 -->
        <Style x:Key="QuestionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 正确答案样式 -->
        <Style x:Key="CorrectAnswerStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- 错误答案样式 -->
        <Style x:Key="WrongAnswerStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- 标准答案样式 -->
        <Style x:Key="StandardAnswerStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- 分数标签样式 -->
        <Style x:Key="ScoreTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- 满分样式 -->
        <Style x:Key="FullScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 部分分数样式 -->
        <Style x:Key="PartialScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 零分样式 -->
        <Style x:Key="ZeroScoreStyle" TargetType="Border" BasedOn="{StaticResource ScoreTagStyle}">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部信息区域 -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 返回按钮和标题 -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="← 返回" 
                            Command="{Binding BackCommand}"
                            Background="Transparent" BorderThickness="0" 
                            FontSize="14" Foreground="#666" Cursor="Hand"
                            Margin="0,0,16,0"/>

                    <TextBlock Grid.Column="1" Text="{Binding ExamTitle}" 
                               FontSize="24" FontWeight="Bold" Foreground="#333" 
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="2" Content="导出报告" 
                            Command="{Binding ExportReportCommand}"
                            Background="#2196F3" Foreground="White" 
                            BorderThickness="0" Padding="12,6" 
                            FontSize="12" Cursor="Hand"/>
                </Grid>

                <!-- 考试基本信息 -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="考试时间" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding ExamDate, StringFormat=yyyy-MM-dd HH:mm}" FontSize="14" Foreground="#333"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock Text="考试用时" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding Duration}" FontSize="14" Foreground="#333"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <TextBlock Text="题目总数" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalQuestions}" FontSize="14" Foreground="#333"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Vertical">
                        <TextBlock Text="考试状态" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding Status}" FontSize="14" Foreground="#333"/>
                    </StackPanel>
                </Grid>

                <!-- 分数统计 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" 
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="总分" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalScore}" FontSize="20" FontWeight="Bold" 
                                       Foreground="#4CAF50" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" 
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="得分" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Score}" FontSize="20" FontWeight="Bold" 
                                       Foreground="#2196F3" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" 
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="正确率" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AccuracyRate, StringFormat={}{0:F1}%}" FontSize="20" FontWeight="Bold" 
                                       Foreground="#FF9800" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" 
                            CornerRadius="8" Padding="16" Margin="0,0,8,0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="正确题数" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CorrectCount}" FontSize="20" FontWeight="Bold" 
                                       Foreground="#4CAF50" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" 
                            CornerRadius="8" Padding="16">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="错误题数" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding WrongCount}" FontSize="20" FontWeight="Bold" 
                                       Foreground="#F44336" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel Orientation="Vertical">
                <!-- 教师评语 -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,16"
                        Visibility="{Binding HasTeacherComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="教师评语" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,12"/>
                        <Border Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1" 
                                CornerRadius="4" Padding="12">
                            <TextBlock Text="{Binding TeacherComment}" FontSize="14" Foreground="#495057" 
                                       TextWrapping="Wrap" LineHeight="20"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- 题目详情列表 -->
                <TextBlock Text="题目详情" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,16"/>

                <ItemsControl ItemsSource="{Binding QuestionDetails}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource QuestionCardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 题目头部信息 -->
                                    <Grid Grid.Row="0" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding QuestionNumber, StringFormat=第{0}题}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="#333" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding QuestionType}" 
                                                       FontSize="12" Foreground="#666" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Score, StringFormat=({0}分)}" 
                                                       FontSize="12" Foreground="#666"/>
                                        </StackPanel>

                                        <!-- 得分标签 -->
                                        <Border Grid.Column="1" x:Name="ScoreBorder" Style="{StaticResource PartialScoreStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding EarnedScore}" FontSize="12" FontWeight="Bold" Foreground="#333"/>
                                                <TextBlock Text="/" FontSize="12" Foreground="#666" Margin="2,0"/>
                                                <TextBlock Text="{Binding Score}" FontSize="12" Foreground="#666"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- 题目内容 -->
                                    <TextBlock Grid.Row="1" Text="{Binding Content}" FontSize="14" Foreground="#333" 
                                               TextWrapping="Wrap" Margin="0,0,0,12" LineHeight="20"/>

                                    <!-- 选择题选项 -->
                                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Options}"
                                                  Visibility="{Binding HasOptions, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,0,12">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="OptionBorder" Style="{StaticResource StandardAnswerStyle}">
                                                    <TextBlock Text="{Binding Text}" FontSize="13" Foreground="#333"/>
                                                </Border>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                        <Setter TargetName="OptionBorder" Property="Style" Value="{StaticResource CorrectAnswerStyle}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsStudentAnswer}" Value="True">
                                                        <DataTrigger.Setters>
                                                            <Setter TargetName="OptionBorder" Property="Style" Value="{StaticResource WrongAnswerStyle}"/>
                                                        </DataTrigger.Setters>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCorrect}" Value="True"/>
                                                            <Condition Binding="{Binding IsStudentAnswer}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter TargetName="OptionBorder" Property="Style" Value="{StaticResource CorrectAnswerStyle}"/>
                                                    </MultiDataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- 学生答案（非选择题） -->
                                    <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,12"
                                                Visibility="{Binding HasTextAnswer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="学生答案：" FontSize="13" FontWeight="Bold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" 
                                                CornerRadius="4" Padding="12">
                                            <TextBlock Text="{Binding StudentAnswer}" FontSize="13" Foreground="#333" 
                                                       TextWrapping="Wrap" LineHeight="18"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- 标准答案 -->
                                    <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,0,0,12">
                                        <TextBlock Text="标准答案：" FontSize="13" FontWeight="Bold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Border Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" 
                                                CornerRadius="4" Padding="12">
                                            <TextBlock Text="{Binding CorrectAnswer}" FontSize="13" Foreground="#333" 
                                                       TextWrapping="Wrap" LineHeight="18"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- 解析 -->
                                    <StackPanel Grid.Row="5" Orientation="Vertical"
                                                Visibility="{Binding HasExplanation, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="题目解析：" FontSize="13" FontWeight="Bold" Foreground="#666" Margin="0,0,0,4"/>
                                        <Border Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1" 
                                                CornerRadius="4" Padding="12">
                                            <TextBlock Text="{Binding Explanation}" FontSize="13" Foreground="#495057" 
                                                       TextWrapping="Wrap" LineHeight="18"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- 数据触发器设置得分样式 -->
                                <Border.Triggers>
                                    <DataTrigger Binding="{Binding IsFullScore}" Value="True">
                                        <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource FullScoreStyle}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsZeroScore}" Value="True">
                                        <Setter TargetName="ScoreBorder" Property="Style" Value="{StaticResource ZeroScoreStyle}"/>
                                    </DataTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>