<UserControl x:Class="ExamSystem.WPF.Views.BuildingManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.WPF.Views"
             xmlns:vm="clr-namespace:ExamSystem.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="■" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="建筑物管理" Style="{StaticResource TitleTextStyle}" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- 统计信息栏 -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 总数统计 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="▣" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="总建筑数" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 消防队站统计 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="♦" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding FireStationCount}" FontSize="24" FontWeight="Bold" Foreground="#E74C3C"/>
                        <TextBlock Text="消防队站" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 专职队统计 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="●" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding SpecialTeamCount}" FontSize="24" FontWeight="Bold" Foreground="#F39C12"/>
                        <TextBlock Text="专职队" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 重点建筑统计 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="★" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding KeyBuildingCount}" FontSize="24" FontWeight="Bold" Foreground="#9B59B6"/>
                        <TextBlock Text="重点建筑" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 工具栏 -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索和筛选 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300" 
                             Margin="0,0,15,0"
                             Tag="搜索建筑名称、地址..."/>
                    
                    <ComboBox ItemsSource="{Binding Cities}" 
                              SelectedItem="{Binding SelectedCity}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="120" 
                              Margin="0,0,15,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding BuildingTypes}" 
                              SelectedItem="{Binding SelectedBuildingType}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="150" 
                              Margin="0,0,15,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Command="{Binding SearchCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="⚲ 搜索"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding AddBuildingCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Content="+ 添加建筑" 
                            Margin="0,0,10,0"/>
                    <Button Command="{Binding ImportBuildingsCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="↓ 批量导入" 
                            Margin="0,0,10,0"/>
                    <Button Command="{Binding ExportBuildingsCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="↑ 导出数据"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 建筑物列表 -->
        <DataGrid ItemsSource="{Binding Buildings}" 
                  SelectedItem="{Binding SelectedBuilding}"
                  Grid.Row="3" 
                  Style="{StaticResource ModernDataGridStyle}"
                  Margin="20"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended">
            <DataGrid.Columns>
                <!-- 选择列 -->
                <DataGridCheckBoxColumn Header="选择" 
                                        Binding="{Binding IsSelected}" 
                                        Width="50"/>
                
                <!-- 基本信息列 -->
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="60" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="建筑名称" 
                                    Binding="{Binding Name}" 
                                    Width="200" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="地址" 
                                    Binding="{Binding Address}" 
                                    Width="250" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="城市" 
                                    Binding="{Binding City}" 
                                    Width="100" 
                                    IsReadOnly="True"/>
                
                <!-- 类型列 -->
                <DataGridTemplateColumn Header="类型" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding TypeColor}" 
                                    CornerRadius="10" 
                                    Padding="8,4">
                                <TextBlock Text="{Binding TypeDisplay}" 
                                           Foreground="White" 
                                           FontSize="11" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- 坐标信息 -->
                <DataGridTextColumn Header="经度" 
                                    Binding="{Binding Longitude, StringFormat=F6}" 
                                    Width="100" 
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="纬度" 
                                    Binding="{Binding Latitude, StringFormat=F6}" 
                                    Width="100" 
                                    IsReadOnly="True"/>
                
                <!-- 创建时间 -->
                <DataGridTextColumn Header="创建时间" 
                                    Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" 
                                    Width="140" 
                                    IsReadOnly="True"/>
                
                <!-- 操作列 -->
                <DataGridTemplateColumn Header="操作" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="查看地图" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Width="60" Height="30" 
                                        Margin="2"
                                        ToolTip="在地图上查看"
                                        Command="{Binding DataContext.ViewOnMapCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="编辑" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Width="40" Height="30" 
                                        Margin="2"
                                        ToolTip="编辑建筑"
                                        Command="{Binding DataContext.EditBuildingCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="详情" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Width="40" Height="30" 
                                        Margin="2"
                                        ToolTip="查看详情"
                                        Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="删除" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Width="40" Height="30" 
                                        Margin="2"
                                        ToolTip="删除建筑"
                                        Command="{Binding DataContext.DeleteBuildingCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 分页和批量操作栏 -->
        <Border Grid.Row="4" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 批量操作 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectedCount, StringFormat=已选择 {0} 项}" 
                               Style="{StaticResource BodyTextStyle}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"/>
                    <Button Command="{Binding BatchDeleteCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="✕ 批量删除" 
                            Margin="0,0,10,0"/>
                    <Button Command="{Binding RefreshCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="↻ 刷新"/>
                </StackPanel>

                <!-- 分页信息 -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding PaginationInfo}" 
                           Style="{StaticResource BodyTextStyle}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                <!-- 分页控件 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding FirstPageCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="&lt;&lt;" 
                            Width="35" Height="35" 
                            Margin="2"
                            ToolTip="首页"/>
                    <Button Command="{Binding PreviousPageCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="&lt;" 
                            Width="35" Height="35" 
                            Margin="2"
                            ToolTip="上一页"/>
                    <TextBox Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Width="50" Height="35" 
                             Margin="5,2"
                             TextAlignment="Center"/>
                    <Button Command="{Binding NextPageCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="&gt;" 
                            Width="35" Height="35" 
                            Margin="2"
                            ToolTip="下一页"/>
                    <Button Command="{Binding LastPageCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="&gt;&gt;" 
                            Width="35" Height="35" 
                            Margin="2"
                            ToolTip="末页"/>
                    
                    <ComboBox ItemsSource="{Binding PageSizeOptions}" 
                              SelectedItem="{Binding PageSize}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="80" 
                              Margin="10,2,0,2"/>
                    <TextBlock Text="条/页" 
                               Style="{StaticResource BodyTextStyle}" 
                               VerticalAlignment="Center" 
                               Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>