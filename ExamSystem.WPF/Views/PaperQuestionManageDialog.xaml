<Window x:Class="ExamSystem.WPF.Views.PaperQuestionManageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="试卷题目管理" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- 样式定义 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="20,15">
            <StackPanel>
                <TextBlock Text="{Binding ExamPaperName, StringFormat='试卷：{0}'}" 
                          Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="{Binding TotalScore, StringFormat='总分：{0}分'}" 
                          FontSize="14" Foreground="#666"/>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：题库选择和题目列表 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 题库选择 -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="选择题库：" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="QuestionBankComboBox"
                             ItemsSource="{Binding QuestionBanks}"
                             SelectedItem="{Binding SelectedQuestionBank}"
                             DisplayMemberPath="Name"
                             Height="35"/>
                </StackPanel>
                
                <!-- 搜索和筛选 -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="SearchTextBox"
                            Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                            Width="200" Height="35"
                            VerticalContentAlignment="Center"
                            Margin="0,0,10,0"/>
                    <ComboBox x:Name="DifficultyFilterComboBox"
                             ItemsSource="{Binding DifficultyOptions}"
                             SelectedItem="{Binding SelectedDifficulty}"
                             Width="100" Height="35"
                             Margin="0,0,10,0"/>
                    <ComboBox x:Name="TypeFilterComboBox"
                             ItemsSource="{Binding QuestionTypeOptions}"
                             SelectedItem="{Binding SelectedQuestionType}"
                             Width="120" Height="35"/>
                </StackPanel>
                
                <!-- 可选题目列表 -->
                <DataGrid Grid.Row="2" 
                         x:Name="AvailableQuestionsDataGrid"
                         ItemsSource="{Binding AvailableQuestions}"
                         SelectedItem="{Binding SelectedAvailableQuestion}"
                         Style="{StaticResource DataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="题目内容" Binding="{Binding Content}" Width="*"/>
                        <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="80"/>
                        <DataGridTextColumn Header="难度" Binding="{Binding Difficulty}" Width="60"/>
                        <DataGridTextColumn Header="分值" Binding="{Binding DefaultScore}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- 添加按钮 -->
                <Button Grid.Row="3" 
                       Content="添加到试卷 →"
                       Command="{Binding AddQuestionCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
            </Grid>
            
            <!-- 分隔线 -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         Background="#E0E0E0"/>
            
            <!-- 右侧：试卷题目列表 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 试卷题目标题 -->
                <TextBlock Grid.Row="0" 
                          Text="试卷题目" 
                          Style="{StaticResource HeaderTextStyle}"
                          Margin="0,0,0,15"/>
                
                <!-- 试卷题目列表 -->
                <DataGrid Grid.Row="1"
                         x:Name="PaperQuestionsDataGrid"
                         ItemsSource="{Binding PaperQuestions}"
                         SelectedItem="{Binding SelectedPaperQuestion}"
                         Style="{StaticResource DataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding OrderIndex}" Width="50"/>
                        <DataGridTextColumn Header="题目内容" Binding="{Binding Question.Content}" Width="*"/>
                        <DataGridTextColumn Header="类型" Binding="{Binding Question.Type}" Width="80"/>
                        <DataGridTextColumn Header="难度" Binding="{Binding Question.Difficulty}" Width="60"/>
                        <DataGridTemplateColumn Header="分值" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- 操作按钮 -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0">
                    <Button Content="上移" 
                           Command="{Binding MoveUpCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="下移" 
                           Command="{Binding MoveDownCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"/>
                    <Button Content="移除" 
                           Command="{Binding RemoveQuestionCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding ValidationMessage}" 
                          Foreground="Red" 
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>
                <Button Content="保存" 
                       Command="{Binding SaveCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"/>
                <Button Content="取消" 
                       Click="CancelButton_Click"
                       Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
        
        <!-- 加载指示器 -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="加载中..." Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>