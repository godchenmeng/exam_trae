<Window x:Class="ExamSystem.WPF.Views.PaperQuestionManageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="试卷题目管理" Height="750" Width="1300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <!-- 对话框专用样式 -->
        <Style x:Key="DialogTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleText}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleText}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="InfoCardStyle" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="ContentCardStyle" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
        
        <Style x:Key="FilterPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="FilterControlStyle" TargetType="FrameworkElement">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
        
        <Style x:Key="ActionButtonPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
        </Style>
        
        <Style x:Key="BottomPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Style="{StaticResource InfoCardStyle}">
            <StackPanel>
                <TextBlock Text="{Binding ExamPaperName, StringFormat='试卷：{0}'}" 
                          Style="{StaticResource DialogTitleStyle}"/>
                <TextBlock Text="{Binding TotalScore, StringFormat='总分：{0}分'}" 
                          Style="{StaticResource BodyText}"
                          Foreground="{StaticResource SecondaryTextBrush}"/>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：题库选择和题目列表 -->
            <Border Grid.Column="0" Style="{StaticResource ContentCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 左侧标题 -->
                    <TextBlock Grid.Row="0" 
                              Text="题库选择" 
                              Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <!-- 题库选择 -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="选择题库：" 
                                  Style="{StaticResource FormLabelText}" 
                                  Margin="0,0,0,6"/>
                        <ComboBox x:Name="QuestionBankComboBox"
                                 ItemsSource="{Binding QuestionBanks}"
                                 SelectedItem="{Binding SelectedQuestionBank}"
                                 DisplayMemberPath="Name"
                                 Style="{StaticResource ModernComboBox}"
                                 Height="36"/>
                    </StackPanel>
                    
                    <!-- 搜索和筛选 -->
                    <StackPanel Grid.Row="2" Style="{StaticResource FilterPanelStyle}">
                        <TextBox x:Name="SearchTextBox"
                                Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource SearchBox}"
                                Width="180" 
                                Height="36"
                                Margin="0,0,12,0"/>
                        <ComboBox x:Name="DifficultyFilterComboBox"
                                 ItemsSource="{Binding DifficultyOptions}"
                                 SelectedItem="{Binding SelectedDifficulty}"
                                 Style="{StaticResource ModernComboBox}"
                                 Width="100" 
                                 Height="36"
                                 Margin="0,0,12,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource DifficultyConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Converter={StaticResource DifficultyConverter}}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="全部"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox x:Name="TypeFilterComboBox"
                                 ItemsSource="{Binding QuestionTypeOptions}"
                                 SelectedItem="{Binding SelectedQuestionType}"
                                 Style="{StaticResource ModernComboBox}"
                                 Width="120" 
                                 Height="36">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource QuestionTypeConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Converter={StaticResource QuestionTypeConverter}}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="全部"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- 可选题目列表 -->
                    <DataGrid Grid.Row="3" 
                             x:Name="AvailableQuestionsDataGrid"
                             ItemsSource="{Binding AvailableQuestions}"
                             SelectedItem="{Binding SelectedAvailableQuestion}"
                             Style="{StaticResource ModernDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="题目内容" Binding="{Binding Content}" Width="*"/>
                            <DataGridTextColumn Header="类型" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="QuestionType" Converter="{StaticResource QuestionTypeConverter}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="难度" Width="60">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Difficulty" Converter="{StaticResource DifficultyConverter}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="分值" Binding="{Binding Score}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- 添加按钮 -->
                    <Button Grid.Row="4" 
                           Content="添加到试卷 →"
                           Command="{Binding AddQuestionCommand}"
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
                </Grid>
            </Border>
            
            <!-- 分隔线 -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         Background="{StaticResource BorderBrush}"
                         Width="1"/>
            
            <!-- 右侧：试卷题目列表 -->
            <Border Grid.Column="2" Style="{StaticResource ContentCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 试卷题目标题 -->
                    <TextBlock Grid.Row="0" 
                              Text="试卷题目" 
                              Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <!-- 试卷题目列表 -->
                    <DataGrid Grid.Row="1"
                             x:Name="PaperQuestionsDataGrid"
                             ItemsSource="{Binding PaperQuestions}"
                             SelectedItem="{Binding SelectedPaperQuestion}"
                             Style="{StaticResource ModernDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="序号" Binding="{Binding OrderIndex}" Width="50"/>
                            <DataGridTextColumn Header="题目内容" Binding="{Binding Question.Content}" Width="*"/>
                            <DataGridTextColumn Header="类型" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Question.QuestionType" Converter="{StaticResource QuestionTypeConverter}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="难度" Width="60">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Question.Difficulty" Converter="{StaticResource DifficultyConverter}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="分值" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Center"
                                                 TextAlignment="Center"
                                                 PreviewTextInput="ScoreTextBox_PreviewTextInput"
                                                 DataObject.Pasting="ScoreTextBox_OnPaste"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- 操作按钮 -->
                    <StackPanel Grid.Row="2" Style="{StaticResource ActionButtonPanelStyle}">
                        <Button Content="上移" 
                               Command="{Binding MoveUpCommand}"
                               Style="{StaticResource SecondaryButton}"
                               Margin="0,0,8,0"/>
                        <Button Content="下移" 
                               Command="{Binding MoveDownCommand}"
                               Style="{StaticResource SecondaryButton}"
                               Margin="0,0,8,0"/>
                        <Button Content="移除" 
                               Command="{Binding RemoveQuestionCommand}"
                               Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="2" Style="{StaticResource BottomPanelStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding ValidationMessage}" 
                          Style="{StaticResource ErrorTextStyle}"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>
                <Button Content="保存" 
                       Command="{Binding SaveCommand}"
                       Style="{StaticResource SuccessButton}"
                       Margin="0,0,12,0"/>
                <Button Content="取消" 
                       Click="CancelButton_Click"
                       Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Border>
        
        <!-- 加载指示器 -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8"
                    Padding="32,24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" 
                                Width="200" 
                                Height="4" 
                                Margin="0,0,0,16"
                                Style="{StaticResource ModernProgressBar}"/>
                    <TextBlock Text="加载中..." 
                              Style="{StaticResource BodyText}"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>