<Application x:Class="ExamSystem.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExamSystem.WPF"
             xmlns:converters="clr-namespace:ExamSystem.WPF.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:LoadingTextConverter x:Key="LoadingTextConverter"/>
            <converters:QuestionTypeConverter x:Key="QuestionTypeConverter"/>
            <converters:DifficultyConverter x:Key="DifficultyConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:BooleanToBackgroundConverter x:Key="BooleanToBackgroundConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:PassedFailedStyleConverter x:Key="PassedFailedStyleConverter"/>
            <!-- 消息中心相关转换器 -->
            <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
            <converters:ReadStatusConverter x:Key="ReadStatusConverter"/>
            <converters:TrueFalseToChineseTextConverter x:Key="TrueFalseToChineseTextConverter" />
            <converters:ChoiceQuestionVisibilityConverter x:Key="ChoiceQuestionVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>